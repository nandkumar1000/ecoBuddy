<% layout('layout/boilerplate') %>
  <!-- Facilities Section -->
  <div class="row mt-5 mb-5 justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
          <h3>Add Facility</h3>
        </div>
        <div class="card-body">
          <form method="post" action="/facilitatecreate">
            <div class="mb-3">
              <label for="FacillityTitle" class="form-label">Facility Title</label>
              <input type="text" name="facility[Facillity_Title]" class="form-control" id="FacillityTitle"
                placeholder="Enter your Facility Title" />
            </div>

            <div class="mb-3">
              <label for="FacillityCategory" class="form-label">Facility Category</label>
              <input type="text" name="facility[Facillity_Category]" class="form-control" id="FacillityCategory"
                placeholder="Enter your Facility Category" />
            </div>

            <div class="mb-3">
              <label for="FacillityDescription" class="form-label">Facility Description</label>
              <textarea class="form-control" id="FacillityDescription" name="facility[Facillity_Description]"
                placeholder="Enter your Facility Description" rows="4"></textarea>
            </div>

            <div class="mb-3">
              <label for="FacillityAddress" class="form-label">Facility Address</label>
              <input type="text" class="form-control" id="FacillityAddress" name="facility[Facillity_Adderess]"
                placeholder="Enter your Facility Address" />
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="FacillityLatitude" class="form-label">Latitude</label>
                <input type="number" step="0.000001" name="facility[Facillity_Latitude]" class="form-control"
                  id="FacillityLatitude" placeholder="Enter Latitude" />
              </div>
              <div class="col-md-6 mb-3">
                <label for="FacillityLongitude" class="form-label">Longitude</label>
                <input type="number" step="0.000001" name="facility[Facillity_Longitude]" class="form-control"
                  id="FacillityLongitude" placeholder="Enter Longitude" />
              </div>
            </div>

            <div class="mb-3">
              <label for="facillityPostcode" class="form-label">Postcode</label>
              <input type="number" name="facility[facillity_Postcode]" class="form-control" id="facillityPostcode"
                placeholder="Enter Postcode" />
            </div>

            <div class="mb-3">
              <label for="FacillityStatus" class="form-label">Status</label>
              <select class="form-select" name="facility[Facillity_Status]" id="FacillityStatus">
                <option value="">Select Status</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="FacillityImage" class="form-label">Facility Image</label>
              <!-- <input type="file" name="facility[FacillityImage]" class="form-control" id="FacillityImage"
                accept="image/*"  /> -->
              <input name="facility[Facillity_Image]" type="text" class="form-control" placeholder="Enter Image url "
                required>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-block">Add Facility</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>