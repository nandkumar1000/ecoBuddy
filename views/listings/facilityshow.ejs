<% layout('layout/boilerplate') %>
  <style>
    body {
      background-color: #f4f8fb;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
    }

    h2 {
      font-size: 2.5rem;
      color: #444;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .container {
      padding: 20px;
    }

    .showfacillity {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      margin-bottom: 30px;
    }

    .showfacillity .card {
      width: 100%;
      max-width: 340px;
      border: none;
      border-radius: 10px;
      overflow: hidden;
      background-color: #fff;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .showfacillity .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .card-body {
      padding: 15px;
      text-align: left;
    }

    .card-body h5 {
      font-size: 1.4rem;
      color: #333;
      margin-bottom: 10px;
    }

    .card-body p {
      font-size: 1rem;
      color: #555;
      margin: 5px 0;
    }

    .card-body p strong {
      font-weight: 600;
      color: #222;
    }

    .card-body a {
      text-decoration: none;
      color: inherit;
      font-weight: bold;
      transition: color 0.3s ease;
    }

    .card-body a:hover {
      color: #007bff;
    }

    .spe {
      text-decoration: none;
    }

    #carouselExampleCaptions {
      max-width: 100%;
      height: 400px;
      overflow: hidden;
      border-radius: 15px;
      /* Adds a modern touch */
    }

    .carousel-inner img {
      height: 400px;
      object-fit: cover;
    }

    .carousel-caption {
      background: rgba(0, 0, 0, 0.5);
      padding: 10px;
      border-radius: 10px;
    }

    @media (max-width: 576px) {
      .showfacillity {
        flex-direction: column;
        align-items: center;
      }
    }
  </style>

  <div class="container ">
    <div id="carouselExampleCaptions" class="carousel slide mb-4">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
          aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
          aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
          aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            src="https://media.istockphoto.com/id/1989096037/photo/farmers-searching-for-anomalies-in-soybeans.webp?a=1&b=1&s=612x612&w=0&k=20&c=WCMY3M0o3lPmr8AXj4Ju6_PIWXTbYY3b1YXs6tEczSI="
            class="d-block w-100" alt="Farmers Searching for Anomalies">
          <div class="carousel-caption d-none d-md-block">
            <h5>Eco-Friendly Farming</h5>
            <p>Promoting sustainable agriculture.</p>
          </div>
        </div>
        <div class="carousel-item">
          <img
            src="https://media.istockphoto.com/id/2180956760/photo/young-couple-jogging-in-a-scenic-park-for-a-healthy-workout-routine.webp?a=1&b=1&s=612x612&w=0&k=20&c=Nn5Sc6XaVRZ5ChWaj7Y_9Ic54QGMe2hLmfMwfUupvGs="
            class="d-block w-100" alt="Couple Jogging in a Park">
          <div class="carousel-caption d-none d-md-block">
            <h5>Green & Active Lifestyle</h5>
            <p>Encouraging eco-friendly habits.</p>
          </div>
        </div>
        <div class="carousel-item">
          <img
            src="https://plus.unsplash.com/premium_photo-1669075651653-e2679a96eded?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8ZWNvYnVkZHl8ZW58MHx8MHx8fDA%3D"
            class="d-block w-100" alt="EcoBuddy Concept">
          <div class="carousel-caption d-none d-md-block">
            <h5>EcoBuddy Community</h5>
            <p>Join hands to make a greener planet.</p>
          </div>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
        data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
        data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <div class="showfacillity">
      <% facilities.forEach(facility=> { %>
        <a class="spe" href="/facilitate/<%= facility._id %>">
          <div class="card">
            <img src="<%= facility.Facillity_Image %>" class="card-img-top" alt="Facility Image">
            <div class="card-body">
              <h5 class="card-title">
                <%= facility.Facillity_Title %>
              </h5>
              <p class="card-text">
                <%= facility.Facillity_Description %>
              </p>
              <p class="card-text"><strong>Category:</strong>
                <%= facility.Facillity_Category %>
              </p>
              <p class="card-text"><strong>Status:</strong>
                <%= facility.Facillity_Status %>
              </p>
            </div>
          </div>
        </a>
        <% }); %>
    </div>
  </div>