<% layout('layout/boilerplate') %>
  <style>
    body {
      background-color: #eafaf1;
      font-family: Arial, sans-serif;
    }

    .showfacillity {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      align-items: center;
      margin-bottom: 22px;
      animation: fadeIn 1s ease-in-out;
    }

    .showfacillity .card {
      width: 100%;
      max-width: 320px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      opacity: 0;
      animation: fadeIn 1s ease-in-out forwards;
      animation-delay: 0.2s;
    }

    .showfacillity .card:hover {
      transform: scale(1.02);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .spe {
      text-decoration: none;
    }

    .card img {
      max-height: 180px;
      object-fit: cover;
    }

    .card-body h5 {
      font-weight: bold;
      color: #333;
    }

    .btn {
      margin-right: 5px;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
      transform: scale(1.05);
    }

    .btn-warning:hover {
      background-color: #ec971f;
    }

    .btn-danger:hover {
      background-color: #c9302c;
    }

    .btn-success:hover {
      background-color: #449d44;
    }


    .text-muted {
      font-style: italic;
    }

    @keyframes fadeIn {
      0% {
        opacity: 0;
        transform: translateY(10px);
      }

      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 576px) {
      .showfacillity {
        flex-direction: column;
        gap: 15px;
      }
    }
  </style>

  <div class="container mt-4">
    <h2 class="text-center mb-4">Facilities</h2>
    <div class="showfacillity">
      <% facilities.forEach(facility=> { %>
        <a class="spe" href="/facilitate/<%=facility._id%>">
          <div class="card">
            <img src="<%= facility.Facillity_Image %>" class="card-img-top" alt="Facility Image">
            <div class="card-body">
              <h5 class="card-title">
                <%= facility.Facillity_Title %>
              </h5>
              <p class="card-text">
                <%= facility.Facillity_Description %>
              </p>
              <p class="card-text"><strong>Category:</strong>
                <%= facility.Facillity_Category %>
              </p>
              <p class="card-text"><strong>Status:</strong>
                <%= facility.Facillity_Status %>
              </p>
            </div>
          </div>
        </a>
    </div>
    <% }); %>
  </div>
  </div>