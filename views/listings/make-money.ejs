<% layout('layout/boilerplate') %>
  <% layout('layout/boilerplate') %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
      body {
        font-family: Arial, sans-serif;
      }

      .hero-section {
        background: url('https://media.istockphoto.com/id/2166336991/photo/gran-canyon-with-green-trees-in-chonburi-thailand-aerial-view-of-beautiful-old-mine-with-blue.webp?a=1&b=1&s=612x612&w=0&k=20&c=ws4Tjz8pHLPQkhCpGad1_uESi9_AlLQP8osd9uNiRPk=') center/cover no-repeat;
        color: white;
        text-align: center;
        padding: 80px 20px;
        background-size: cover;
      }

      .hero-section h1 {
        font-size: 3.5rem;
        font-weight: bold;
      }

      .hero-section p {
        font-size: 1.2rem;
        margin-top: 20px;
      }

      .feature-icon {
        font-size: 3rem;
        color: #4CAF50;
      }

      .cta-section {
        background-color: #f8f9fa;
        padding: 50px 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .cta-section h3 {
        font-weight: bold;
        color: #333;
      }

      .cta-button {
        background-color: #4CAF50;
        color: white;
        font-size: 1.2rem;
        padding: 12px 30px;
        border-radius: 5px;
        text-transform: uppercase;
        transition: background-color 0.3s;
      }

      .cta-button:hover {
        background-color: #45a049;
      }

      .contact-details {
        margin-top: 40px;
      }

      .contact-details a {
        text-decoration: none;
        color: #4CAF50;
        font-weight: bold;
      }

      .stats-section {
        background-color: #e8f5e9;
        padding: 50px 0;
        text-align: center;
      }

      .stats-section .stat-item {
        font-size: 2rem;
        color: #388e3c;
        font-weight: bold;
      }

      .testimonials-section {
        background-color: #fff;
        padding: 50px 0;
        text-align: center;
        border-top: 2px solid #4CAF50;
      }

      .testimonial-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      .testimonial-card p {
        font-size: 1.2rem;
        color: #555;
      }

      .testimonial-card h5 {
        font-weight: bold;
        color: #333;
      }
    </style>

    <!-- Hero Section -->
