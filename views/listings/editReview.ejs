<% layout('layout/boilerplate') %>
  <style>
    .editreveiw {
      margin: 12px;
      padding: 12px;
    }
  </style>

  <div class="editreveiw">
    <form action="/facilitate/<%= facilityId %>/reviews/<%= review._id %>" method="POST" class="d-inline">
      <div class="form-group">
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" value="<%= review.Feedback_Rating %>" min="0" max="5"
          class="form-control" required>
      </div>
      <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea id="comment" name="comment" class="form-control" rows="3"
          required><%= review.Feedback_Message %></textarea>
      </div>
      <button type="submit" class="btn btn-primary mt-4">Update Review</button>
    </form>
  </div>