<% layout('layout/boilerplate') %>
  <!-- Autoplay Carousel Background -->
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="https://th.bing.com/th?id=OIP.MvhAiKtOmRmkuoESlteU9wHaIV&w=235&h=265&c=8&rs=1&qlt=90&o=6&dpr=1.5&pid=3.1&rm=2"
          class="d-block w-100" alt="Eco-friendly Facility 1" style="height: 100vh; object-fit: cover;">
      </div>
      <div class="carousel-item">
        <img
          src="https://th.bing.com/th?id=OIP.abRTVRMtXExB40K4kJF_oAHaFj&w=288&h=216&c=8&rs=1&qlt=90&o=6&dpr=1.5&pid=3.1&rm=2"
          class="d-block w-100" alt="Eco-friendly Facility 2" style="height: 100vh; object-fit: cover;">
      </div>
      <div class="carousel-item">
        <img
          src="https://th.bing.com/th?id=OIP.tPeUvlWt7AKzWi312M13HgHaFj&w=288&h=216&c=8&rs=1&qlt=90&o=6&dpr=1.5&pid=3.1&rm=2"
          class="d-block w-100" alt="Eco-friendly Facility 3" style="height: 100vh; object-fit: cover;">
      </div>
    </div>
  </div>

  <!-- Main Section Over the Background -->
  <section
    class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center text-center text-white"
    style="background-color: rgba(0, 0, 0, 0.2);">
    <div class="container">
      <h1 class="display-4 fw-bold">Welcome to ecoBuddy</h1>
      <p class="lead">Your companion for locating eco-friendly facilities around you!</p>
      <a href="#cta" class="btn btn-success btn-lg">Join the Green Movement</a>
    </div>
  </section>


  <!-- Key Features Section -->
  <section id="features" class="py-5 bg-light">
    <div class="container text-center">
      <h2 class="fw-bold mb-4">Why Choose ecoBuddy?</h2>
      <div class="row g-4">
        <!-- Nearby Facilities -->
        <div class="col-md-4">
          <div class="icon-box">
            <i class="bi bi-geo-alt-fill text-success display-4"></i>
            <h5 class="mt-3">Nearby Facilities</h5>
            <p>Locate eco-friendly spots like recycling centers and organic stores with ease.</p>
          </div>
        </div>
        <!-- Sustainability Insights -->
        <div class="col-md-4">
          <div class="icon-box">
            <i class="bi bi-graph-up-arrow text-success display-4"></i>
            <h5 class="mt-3">Sustainability Insights</h5>
            <p>Access tips and information to lead a greener lifestyle every day.</p>
          </div>
        </div>
        <!-- Community Driven -->
        <div class="col-md-4">
          <div class="icon-box">
            <i class="bi bi-people-fill text-success display-4"></i>
            <h5 class="mt-3">Community Driven</h5>
            <p>Join a growing network of environmentally conscious individuals.</p>
          </div>
        </div>
        <!-- Eco Challenges -->
        <div class="col-md-4">
          <div class="icon-box">
            <i class="bi bi-trophy-fill text-success display-4"></i>
            <h5 class="mt-3">Eco Challenges</h5>
            <p>Participate in challenges to reduce your carbon footprint and earn rewards.</p>
          </div>
        </div>
        <!-- Green Products Store -->
        <div class="col-md-4">
          <div class="icon-box">
            <i class="bi bi-cart-fill text-success display-4"></i>
            <h5 class="mt-3">Green Products Store</h5>
            <p>Shop for eco-friendly products, from sustainable fashion to zero-waste tools.</p>
          </div>
        </div>
        <!-- Event & Workshop Booking -->
        <div class="col-md-4">
          <div class="icon-box">
            <i class="bi bi-calendar-check-fill text-success display-4"></i>
            <h5 class="mt-3">Event & Workshop Booking</h5>
            <p>Sign up for events and workshops focused on green initiatives and sustainability.</p>
          </div>
        </div>
        <!-- Eco-Friendly Rewards -->
        <div class="col-md-4">
          <div class="icon-box">
            <i class="bi bi-gift-fill text-success display-4"></i>
            <h5 class="mt-3">Eco-Friendly Rewards</h5>
            <p>Earn eco-points for your sustainable actions and redeem them for exciting rewards.</p>
          </div>
        </div>
        <!-- Green Travel Options -->
        <div class="col-md-4">
          <div class="icon-box">
            <i class="bi bi-airplane-engines text-success display-4"></i>
            <h5 class="mt-3">Green Travel Options</h5>
            <p>Discover eco-friendly travel options, from sustainable hotels to green transport.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Counter Section -->
  <section id="stats" class="py-5 text-white" style="background-color: #28a745;">
    <div class="container text-center">
      <h2 class="fw-bold mb-4">ecoBuddy in Numbers</h2>
      <p class="mb-4 lead">Join our growing community that's making a difference for a greener planet. Here's how we're
        driving change:</p>
      <div class="row g-4">
        <!-- Facilities Listed -->
        <div class="col-md-3">
          <div class="p-3 border rounded shadow-sm bg-success text-white h-100">
            <i class="bi bi-building fs-1 mb-2"></i>
            <h1 class="display-5 fw-bold">10K+</h1>
            <p>Facilities Listed</p>
          </div>
        </div>
        <!-- Happy Users -->
        <div class="col-md-3">
          <div class="p-3 border rounded shadow-sm bg-success text-white h-100">
            <i class="bi bi-people fs-1 mb-2"></i>
            <h1 class="display-5 fw-bold">50K+</h1>
            <p>Happy Users</p>
          </div>
        </div>
        <!-- Green Initiatives -->
        <div class="col-md-3">
          <div class="p-3 border rounded shadow-sm bg-success text-white h-100">
            <i class="bi bi-tree fs-1 mb-2"></i>
            <h1 class="display-5 fw-bold">500+</h1>
            <p>Green Initiatives</p>
          </div>
        </div>
        <!-- Partner Organizations -->
        <div class="col-md-3">
          <div class="p-3 border rounded shadow-sm bg-success text-white h-100">
            <i class="bi bi-handshake fs-1 mb-2"></i>
            <h1 class="display-5 fw-bold">100+</h1>
            <p>Partner Organizations</p>
          </div>
        </div>
        <!-- Trees Planted -->
        <div class="col-md-3">
          <div class="p-3 border rounded shadow-sm bg-success text-white h-100">
            <i class="bi bi-leaf fs-1 mb-2"></i>
            <h1 class="display-5 fw-bold">1M+</h1>
            <p>Trees Planted</p>
          </div>
        </div>
        <!-- Events Conducted -->
        <div class="col-md-3">
          <div class="p-3 border rounded shadow-sm bg-success text-white h-100">
            <i class="bi bi-calendar-event fs-1 mb-2"></i>
            <h1 class="display-5 fw-bold">300+</h1>
            <p>Events Conducted</p>
          </div>
        </div>
        <!-- Recycling Projects -->
        <div class="col-md-3">
          <div class="p-3 border rounded shadow-sm bg-success text-white h-100">
            <i class="bi bi-recycle fs-1 mb-2"></i>
            <h1 class="display-5 fw-bold">200+</h1>
            <p>Recycling Projects</p>
          </div>
        </div>
        <!-- Community Members -->
        <div class="col-md-3">
          <div class="p-3 border rounded shadow-sm bg-success text-white h-100">
            <i class="bi bi-person-heart fs-1 mb-2"></i>
            <h1 class="display-5 fw-bold">25K+</h1>
            <p>Active Community Members</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials" class="py-5" style="background-color: #f8f9fa;">
    <div class="container">
      <h2 class="fw-bold text-center mb-5">What Our Users Say</h2>
      <div class="row g-4">
        <!-- Testimonial 1 -->
        <div class="col-md-4">
          <div class="card shadow-sm border-0">
            <div class="card-body text-center">
              <img
                src="https://images.pexels.com/photos/5487075/pexels-photo-5487075.jpeg?auto=compress&cs=tinysrgb&w=600"
                class="rounded-circle mb-3" alt="User 1" style="width: 100px; height: 100px; object-fit: cover;">
              <p class="card-text">"ecoBuddy has been an incredible tool for finding eco-friendly shops and tips to live
