<% layout('layout/boilerplate') %>

  <div class="form-container">
    <!-- Background Shapes -->
    <div class="shape shape1"></div>
    <div class="shape shape2"></div>

    <!-- Form Box -->
    <div class="form-box shadow-lg rounded">
      <!-- Logo Section -->
      <div class="text-center mb-4">
        <img src="https://i.postimg.cc/WbVD3VTV/authentication.png" alt="Authentication" class="img-fluid"
          style="max-width: 150px;">
      </div>

      <!-- Form Title -->
      <h1 class="form-title text-center mb-3">Welcome to Eco Buddy</h1>
      <p class="text-center text-muted mb-4">
        Login to access your personalized dashboard, track your eco-friendly contributions, and be part of the green
        revolution!
      </p>

      <!-- Login Form -->
      <form>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <div class="input-group input-group-lg">
            <span class="input-group-text"><i class='bx bxs-user-circle'></i></span>
            <input type="text" id="username" class="form-control" placeholder="Enter your username">
          </div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <div class="input-group input-group-lg">
            <span class="input-group-text"><i class='bx bx-lock'></i></span>
            <input type="password" id="password" class="form-control" placeholder="Enter your password">
          </div>
        </div>

        <div class="text-end mb-3">
          <a href="#" class="text-decoration-none">Forgot Password?</a>
        </div>

        <button type="submit" class="btn btn-success w-100 mb-4 shadow-sm">Login to Eco Buddy</button>

        <!-- Social Login -->
        <div class="text-center">
          <span>Or login with</span>
          <div class="mt-3">
            <a href="#" class="form-social-icon mx-2"><i class='bx bxl-facebook'></i></a>
            <a href="#" class="form-social-icon mx-2"><i class='bx bxl-google'></i></a>
            <a href="#" class="form-social-icon mx-2"><i class='bx bxl-instagram'></i></a>
          </div>
        </div>
      </form>

      <!-- Signup Link -->
      <div class="text-center mt-4">
        <span>New to Eco Buddy?</span>
        <a href="/register" class="text-decoration-none text-success">Create an account</a>
      </div>
    </div>
  </div>

  <!-- Styles -->
  <style>
    /* Background Shapes */
    .shape1,
    .shape2 {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      z-index: -1;
      opacity: 0.2;
      pointer-events: none;
      background: linear-gradient(to right, #00c853, #00e676);
      clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
      animation: moveShapes 8s ease-in-out infinite;
    }

    .shape2 {
      transform: rotate(180deg);
    }

    @keyframes moveShapes {
      0% {
        transform: translateX(-100%);
      }

      50% {
        transform: translateX(100%);
      }

      100% {
        transform: translateX(-100%);
      }
    }

    /* Form Container */
    .form-container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f4f4f9;
      position: relative;
    }

    .form-box {
      background-color: white;
      padding: 30px;
      border-radius: 10px;
      width: 100%;
      max-width: 400px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }

    .form-box:hover {
      transform: scale(1.05);
    }

    .form-title {
      font-size: 24px;
      font-weight: bold;
      color: #333;
    }

    .form-social-icon {
      font-size: 24px;
      color: #333;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .form-social-icon:hover {
      color: #0073e6;
    }

    .input-group-text {
      background-color: #e8f5e9;
    }

    .input-group-lg .form-control {
      height: calc(2.25rem + 2px);
      font-size: 1.1rem;
    }

    button {
      font-size: 1.1rem;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #388e3c;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .form-box {
        width: 90%;
        padding: 20px;
      }
    }
  </style>