<% layout('layout/boilerplate') %>
  <!-- Styles -->
  <style>
    .nand {
      background-color: #eafaf1;
      padding: 5px 5px;
    }

    /* Background Animation for Title and Text */
    .kumar {
      font-size: 2rem;
      font-weight: bold;
      color: #388e3c;
      animation: fadeInUp 1s ease-out;
    }

    .sahu {
      font-size: 1.1rem;
      animation: fadeInUp 1.5s ease-out;
    }

    .animated-form {
      animation: fadeInUp 2s ease-out;
    }

    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }

      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Eco Buddy Mission Section */
    .text-success {
      font-size: 1.4rem;
      font-weight: bold;
      margin-top: 20px;
    }

    /* Form Container */
    .form-container {
      max-width: 450px;
      margin: 0 auto;
      background-color: #ffffff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
      transition: transform 0.3s ease-in-out;
    }

    .form-container:hover {
      transform: scale(1.03);
    }

    .nand-input {
      font-size: 1.1rem;
      height: calc(2.5rem + 2px);
      animation: slideIn 0.8s ease-out;
    }

    .input-group-text {
      background-color: #e8f5e9;
      cursor: pointer;
    }

    .input-group-text img {
      width: 20px;
    }

    /* Animation for Input Fields */
    .animated-input {
      animation: slideIn 0.8s ease-out;
    }

    @keyframes slideIn {
      0% {
        opacity: 0;
        transform: translateX(-10px);
      }

      100% {
        opacity: 1;
        transform: translateX(0);
      }
    }

    /* Submit Button with Hover Effects */
    .transform-on-hover:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    }

    /* Animation for Submit Button */
    .animated-button {
      animation: bounceIn 1s ease-out;
    }

    @keyframes bounceIn {
      0% {
        opacity: 0;
        transform: scale(0.7);
      }

      50% {
        opacity: 1;
        transform: scale(1.05);
      }

      100% {
        opacity: 1;
        transform: scale(1);
      }
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .form-container {
        padding: 20px;
        width: 90%;
      }
    }
  </style>
  <div class="nand">
    <!-- Registration Section -->
    <h2 class="text-center kumar mt-3">Join Eco Buddy</h2>
    <p class="text-center text-muted mb-4 sahu">Become part of our green initiative to make the world a better place.
      Register now to access exclusive resources and contribute to our eco-friendly community.</p>

    <!-- Eco Buddy Mission Section -->
    <p class="text-center text-success sahu">Our mission is to create a greener future by connecting like-minded
      individuals. Join us in making a difference!</p>

    <!-- Form Container -->
    <div class="form-container animated-form mb-4 nand">
      <form action="" method="POST">
        <!-- First Name -->
        <div class="mb-3 form-group">
          <label for="fname" class="form-label">First Name</label>
          <input type="text" id="fname" name="fname" class="form-control form-control-lg animated-input nand-input"
            placeholder="Enter your first name" required>
        </div>

        <!-- Last Name -->
        <div class="mb-3 form-group">
          <label for="lname" class="form-label">Last Name</label>
          <input type="text" id="lname" name="lname" class="form-control form-control-lg animated-input nand-input"
            placeholder="Enter your last name" required>
        </div>

        <!-- Email -->
        <div class="mb-3 form-group">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control form-control-lg animated-input nand-input"
            placeholder="Enter your email address" required>
        </div>

        <!-- Password -->
        <div class="mb-3 form-group">
          <label for="password1" class="form-label">Password</label>
          <div class="input-group input-group-lg">
            <input type="password" id="password1" name="password" class="form-control animated-input nand-input"
              placeholder="Create a password" required>
            <span class="input-group-text" onclick="togglePassword('password1')">
              <img src="https://img.icons8.com/fluency-systems-filled/48/FD7E14/visible.png" alt="Show">
            </span>
          </div>
        </div>

        <!-- Confirm Password -->
        <div class="mb-3 form-group">
          <label for="password2" class="form-label">Confirm Password</label>
          <div class="input-group input-group-lg">
            <input type="password" id="password2" name="password" class="form-control animated-input nand-input"
              placeholder="Confirm your password" required>
            <span class="input-group-text" onclick="togglePassword('password2')">
              <img src="https://img.icons8.com/fluency-systems-filled/48/FD7E14/visible.png" alt="Show">
            </span>
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success w-100 mb-4 shadow-sm transform-on-hover animated-button">
          Join the Eco Buddy Family
        </button>
      </form>
    </div>
  </div>
  <!-- JavaScript for Toggle Password Visibility -->
  <script>
    function togglePassword(fieldId) {
      const field = document.getElementById(fieldId);
      field.type = field.type === 'password' ? 'text' : 'password';
    }
  </script>