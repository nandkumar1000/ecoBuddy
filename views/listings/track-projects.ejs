<% layout('layout/boilerplate') %>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #eafaf1;
    }

    .card {
      border-radius: 15px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
      background-color: #28a745;
      color: white;
      border-radius: 15px 15px 0 0;
      font-weight: 600;
      text-align: center;
    }

    .progress {
      height: 8px;
      border-radius: 5px;
    }

    .badge-category {
      font-size: 0.85rem;
      padding: 5px 10px;
      border-radius: 12px;
    }

    .badge-recycling {
      background-color: #17a2b8;
      color: white;
    }

    .badge-energy {
      background-color: #ffc107;
      color: black;
    }

    .badge-water {
      background-color: #007bff;
      color: white;
    }

    .badge-plantation {
      background-color: #20c997;
      color: white;
    }

    .badge-cleanup {
      background-color: #dc3545;
      color: white;
    }

    .btn-add-task {
      background-color: #218838;
      color: white;
      border-radius: 25px;
    }
  </style>

