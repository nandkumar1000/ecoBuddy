<% layout('layout/boilerplate') %>

  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #eafaf1;
    }

    .section-faq {
      padding-top: 80px;
      padding-bottom: 80px;
    }

    .section-faq .header-section .title {
      font-family: 'Poppins', sans-serif;
      font-size: 40px;
      position: relative;
      padding-bottom: 35px;
      margin-bottom: 30px;
    }

    .section-faq .header-section .title::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 70px;
      height: 3px;
      background-color: #1556a6;
    }

    .section-faq .header-section .description {
      font-size: 20px;
      opacity: 0.7;
    }

    .questions .single-question {
      margin-bottom: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .questions .single-question div {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      cursor: pointer;
      transition: all 0.3s;
    }

    .questions .single-question:hover div,
    .questions .active div {
      border-color: #1556a6;
      color: #1556a6;
    }

    .questions .single-question h3 {
      font-family: 'Poppins', sans-serif;
      font-size: 21px;
    }

    .questions .single-question i {
      font-size: 20px;
      transition: transform 0.4s;
    }

    .questions .active i {
      transform: rotateX(180deg);
    }

    .questions .single-question .answer {
      padding: 15px;
      opacity: 0.7;
      display: none;
      background-color: #f8f8f8;
      border-top: 1px solid #ddd;
    }

    .question-form {
      background-color: #f8f8f8;
      border-radius: 8px;
      padding: 50px 60px;
    }

    .question-form .title {
      font-family: 'Poppins', sans-serif;
      font-size: 24px;
      margin-bottom: 25px;
    }

    .question-form form input,
    .question-form form textarea {
      width: 100%;
      border: 1px solid #ddd;
      border-radius: 5px;
      padding: 10px 15px;
      transition: all 0.3s;
      outline: none;
      background-color: #f2f2f2;
    }

    .question-form form input:focus,
    .question-form form textarea:focus {
      background-color: #fff;
      border-color: #bbb;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    }

    .send-request {
      font-family: 'Poppins', sans-serif;
      margin-top: 40px;
      text-transform: uppercase;
      background-color: #1556a6;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 15px 30px;
      transition: box-shadow 0.3s;
    }

    .send-request:hover {
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

    @media (max-width: 991.9px) {
      .questions {
        margin-bottom: 60px;
      }
    }
  </style>


  <!-- START SECTION FAQ -->
  <section class="section-faq">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-md-8">
          <div class="header-section">
            <h2 class="title">Frequently Asked Questions</h2>
            <p class="description">At EcoBuddy, we care about the planet and your questions! Below are some of the
              most common queries we receive.</p>
          </div>
        </div>
      </div>

      <div class="row">
        <!-- Questions Section -->
        <div class="col-lg-6">
          <div class="questions">
            <div class="single-question">
              <div>
                <h3>What is EcoBuddy's mission?</h3>
                <i class="fas fa-angle-down"></i>
              </div>
              <p class="answer">EcoBuddy is committed to helping individuals make sustainable choices for a better
                future. We promote eco-friendly products, tips, and resources for a greener lifestyle.</p>
            </div>
            <div class="single-question">
              <div>
                <h3>How can I reduce my carbon footprint?</h3>
                <i class="fas fa-angle-down"></i>
              </div>
              <p class="answer">Reducing your carbon footprint can be done by using renewable energy, minimizing
                waste, and choosing sustainable products. Visit our blog for tips on making eco-friendly choices!</p>
            </div>
            <div class="single-question active">
              <div>
                <h3>How can I get involved in EcoBuddyâ€™s community?</h3>
                <i class="fas fa-angle-down"></i>
              </div>
              <p class="answer">You can join EcoBuddy by signing up for our newsletter, attending events, and
                following us on social media. Together, we can build a sustainable future.</p>
            </div>
          </div>
        </div>

        <!-- Question Form Section -->
        <div class="col-lg-6 rounded-9 ">
          <div class="question-form bg-success">
            <h3 class="title">Have a Question?</h3>
            <form class="mt-3 bg-success">
              <input type="text" placeholder="Your Name*" required class="pt-3 mt-3">
              <input type="email" placeholder="Your Email*" required class="pt-3 mt-3">
              <textarea placeholder="Your Question*" required class="pt-3 mt-3"></textarea>
              <button type="submit" class="send-request">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- / END SECTION FAQ -->

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function () {
      $(".single-question > div").on("click", function () {
        $(".single-question .answer").slideUp();
        if ($(this).parent().hasClass("active")) {
          $(this).parent().removeClass("active");
        } else {
          $(".single-question").removeClass("active");
          $(this).parent().addClass("active");
          $(this).next(".answer").slideDown();
        }
      });
    });
  </script>