<% layout('layout/boilerplate') %>

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #eafaf1;
    }

    .section-title {
      font-size: 36px;
      color: #2b5d34;
      font-weight: bold;
      text-align: center;
      margin-top: 10px;
      margin-bottom: 20px;
    }

    .subheading {
      text-align: center;
      font-size: 18px;
      color: #555;
      margin-bottom: 40px;
    }

    .user-table-container {
      background-color: white;
      border-radius: 15px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      padding: 30px;
    }

    .user-table th,
    .user-table td {
      text-align: center;
      vertical-align: middle;
    }

    .user-status {
      padding: 6px 15px;
      border-radius: 20px;
      color: white;
      font-weight: bold;
    }

    .active-status {
      background-color: #28a745;
      cursor: pointer;
    }

    .active-status:hover {
      background-color: #2ecc71;
    }

    .inactive-status {
      background-color: #dc3545;
    }

    .inactive-status:hover {
      background-color: #e74c3c;
      cursor: pointer;
    }

    .btn-action {
      background-color: #2b5d34;
      cursor: pointer;
      color: white;
      padding: 8px 15px;
      border-radius: 5px;
      font-weight: bold;
      transition: background-color 0.3s;
    }

    .btn-action:hover {
      background-color: #1b703e;
    }

    .action-icons {
      font-size: 20px;
    }

    .action-icons i {
      margin: 0 10px;
      cursor: pointer;
      transition: color 0.3s;
    }

    .action-icons i:hover {
      color: #2b5d34;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .user-table-container {
        padding: 15px;
      }
    }
  </style>


